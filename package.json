{
  "name": "ha-treemap-card",
  "version": "0.3.7",
  "description": "A treemap card for Home Assistant dashboards",
  "type": "module",
  "main": "dist/treemap-card.js",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "vite build --watch --outDir /home/ondrej/dockers/homeassistant/config/www --emptyOutDir=false",
    "build": "vite build",
    "ha": "./deploy.sh",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "pnpm typecheck && pnpm format:check && pnpm lint && pnpm test:run",
    "fix": "pnpm format && pnpm lint:fix",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "treemap"
  ],
  "author": "Ondrej Machala",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.7.4",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "lit": "^3.2.0"
  }
}
